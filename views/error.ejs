<% layout('layouts/boilerplate') %>
<div class="row">
  <div class="col-6 offset-3">
    <div class="alert alert-danger" role="alert">
      <h3 class="alert-heading text-center"><%=err.statusCode%> Error</h4>
      <h4 class="text-center"><%=err.message%></h4>
      <% if (process.env.NODE_ENV !== "production") { %>
      <hr />
      <p><%= err.stack %></p>
      <% } %>
    </div>
  </div>
</div>
